		{
			"name": "RUN FIRST - Get Token - Save To Environment",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"if (pm.response.code === 200) {\r",
							"    const json = pm.response.json();\r",
							"    if (json.token) {\r",
							"        pm.environment.set(\"token\", json.token);\r",
							"        console.log(\"Token saved to environment variable: \" + json.token);\r",
							"    }\r",
							"}"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "http://localhost:8084/auth/login?username=user1&password=password",
					"protocol": "http",
					"host": [
						"localhost"
					],
					"port": "8084",
					"path": [
						"auth",
						"login"
					],
					"query": [
						{
							"key": "username",
							"value": "user1"
						},
						{
							"key": "password",
							"value": "password"
						}
					]
				}
			},
			"response": []
